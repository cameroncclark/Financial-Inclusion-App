package Model;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.List;
import java.util.Observable;

import com.google.gson.Gson;

import ContentObjects.Category;

public class Model extends Observable {
	Gson gson = new Gson();
	
	public void testModel(){
		System.out.println("I've been pressed");
	}
	
	public void selectCategories(){
		//TODO: Change path when packaged
		File file = new File("../../FinancialInclusionApplication/www/content/categories.json");
		FileInputStream fis = null;
		
		try{
			fis = new FileInputStream(file);
			
			String fileText = getJSONString(fis);

			Category[] testStr = gson.fromJson(fileText, Category[].class);
			System.out.println(testStr[0].getName());
			
		} catch(Exception e){
			e.printStackTrace();
		} finally{
			try {
				fis.close();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
	}
	
	public void addCategory(){
		
	}
	
	/**
	 * This returns the JSON file as a string.
	 * 
	 * @param file
	 * @return String
	 * @throws IOException
	 */
	private String getJSONString(FileInputStream file) throws IOException{
		StringBuilder builder = new StringBuilder();
		int ch;
		while((ch = file.read()) != -1){
		    builder.append((char)ch);
		}
		
		return builder.toString();
	}
}
