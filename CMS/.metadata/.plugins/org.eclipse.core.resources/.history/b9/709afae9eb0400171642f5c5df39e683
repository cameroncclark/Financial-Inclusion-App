package Controller;

import javax.swing.JOptionPane;

import Model.Model;
import View.MainContainer;
import View.TipsPanel;

public class DeleteTipCtrl {
	public DeleteTipCtrl(Model model, MainContainer view) {
		TipsPanel panel = (TipsPanel) view.getActivePanel();
		int sure = JOptionPane.showConfirmDialog(null, "Sure", "Are you sure?", JOptionPane.YES_NO_OPTION,
				JOptionPane.INFORMATION_MESSAGE);
		if (sure == JOptionPane.YES_OPTION) {
			model.deleteTip(panel.getSelectedDelete());
			JOptionPane.showMessageDialog(null, "Yesss.", "Success", JOptionPane.INFORMATION_MESSAGE);
		}

	}
}
