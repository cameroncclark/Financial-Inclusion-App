package View;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JTextField;

public class AddContentPane extends JDialog implements ActionListener {
	public AddContentPane() {
		setModal(true);
		createComponents();
		setVisible(true);
	}
	
	private void createComponents(){
		JTextField topicTitle = new JTextField("Topic Title:");
		topicTitle.setBounds(2,2,200,20);
		add(topicTitle);
		JButton closePopup = new JButton("Close");
		closePopup.addActionListener(this);
		add(closePopup);
		pack();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		this.setVisible(false);
		
	}
}
