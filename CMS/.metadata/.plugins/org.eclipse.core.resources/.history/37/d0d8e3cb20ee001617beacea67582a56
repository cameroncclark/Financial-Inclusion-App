package Model;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.List;
import java.util.Observable;

import com.google.gson.Gson;

import ContentObjects.Category;

public class Model extends Observable {
	Gson gson = new Gson();
	
	public void testModel(){
		System.out.println("I've been pressed");
	}
	
	public void selectCategories(){
		//TODO: Change path when packaged
		File file = new File("../../FinancialInclusionApplication/www/content/categories.json");
		FileInputStream fis = null;
		
		try{
			fis = new FileInputStream(file);
			
			StringBuilder builder = new StringBuilder();
			int ch;
			while((ch = fis.read()) != -1){
			    builder.append((char)ch);
			}

			List<Category> testStr = gson.fromJson(builder.toString(), Category.class);
			System.out.println(testStr.size());
			
			System.out.println(builder.toString());
			//System.out.println(testStr);
		}catch(Exception e){
			e.printStackTrace();
		}finally{
			try {
				fis.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
	
	public void addCategory(){
		
	}
}
