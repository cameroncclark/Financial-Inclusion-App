<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ionicframework.financialinclusionapplication365221" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Financial Inclusion Application</name>
    <description>
        An Ionic Framework and Cordova project.
    </description>
    <author email="you@example.com" href="http://example.com/">
      Your Name Here
    </author>
    <content src="index.html" />

    <access origin="*" />
    <allow-navigation href="*" />
    <access origin="tel:*" launch-external="yes" /> <!-- This is to allow phonecalls to be made -->
    <access origin="mailto:*" launch-external="yes" />

    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreenDuration" value="2000" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="Orientation" value="portrait" /> <!-- This was changed to ensure the Orientation was fixed to portrait -->
    <preference name="Fullscreen" value="true" /> <!-- This was changed to ensure the application was fixed to fullscreen -->

    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <feature name="InAppBrowser"> <!-- This is to allow external webpages to be accessed on iOS -->
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>

    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.4" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-device" spec="https://git-wip-us.apache.org/repos/asf/cordova-plugin-device.git" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-camera" spec="~2.3.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.1" />
    <plugin name="cordova-sqlite-storage" spec="https://github.com/brodysoft/Cordova-SQLitePlugin.git" />
</widget>
